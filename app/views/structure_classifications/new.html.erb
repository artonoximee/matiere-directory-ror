<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8">

			<h2>Créer une nouvelle classification de structure</h2>
			<br>

			<%= form_tag url_for(action: 'create'), method: "post" do %>

			<div class="form-group">
			<%= label_tag 'Nom de la classification de structure' %>
			<%= text_field_tag 'name', "", :placeholder => "Nom de la classification de structure", :class => "form-control" %>
			</div>

			<br>
			<%= submit_tag "Créer une nouvelle classification de structure", :class => "btn btn-lg btn-sm btn-block btn-success" %>
			<br><br>
			<% end %>

			<hr/>

			<h2>Classifications de structures</h2>
			<br>

			<div class="card">
			  <ul class="list-group list-group-flush">
			  	<% @structure_classifications.each do |structure_classification| %>
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<span><%= structure_classification.name %>
						</span>
						<span>
							<%= link_to "Supprimer la classification", structure_classification_path(structure_classification.id), :class => "btn btn-danger btn-sm", data: { confirm: "Êtes-vous sûr(e) ?" }, :method => "delete" %>
						</span>
					</li>
				<% end %>
			  </ul>
			</div>

		</div>
	</div>
</div>