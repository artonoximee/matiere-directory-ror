<div class="container-sidebar-wrapper">

	<%= render 'layouts/sidebar_user' if !user_signed_in? %>

	<div id="content">

		<div class="row justify-content-center">

			<div class="col-xl-8 col-lg-10 col-md-12" style="margin-top: 8vh">

				<h2 class="text-center"><span class="count"><%= @projects.count %></span> Projets référencées sur Matière</h2><br>

				<div class="card">
				  <ul class="list-group list-group-flush">
				  	<% @projects.each do |project| %>
						<li class="list-group-item align-items-center">
							<i class="fas fa-home"></i>
							<%= link_to project.title, project_path(project.id) %>
							<br/><span class="small">de <%= project.structures_array.join(", ") %> | <%= project.city %> | <%= project.status_fr %></span>
							<span class="float-right small"><%= project.year %></span>
						</li>
					<% end %>
				  </ul>
				</div>
				
			</div>
		</div>
	</div>
</div>


<script type="text/javascript">
	$('.count').each(function () {
        $(this).prop('Counter',0).animate({
            Counter: $(this).text()
        }, {
            duration: 4000,
            easing: 'swing',
            step: function (now) {
                $(this).text(Math.ceil(now));
            }
        });
    });
  </script>