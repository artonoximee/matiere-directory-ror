<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8">

			<h2>Editer un partenaire</h2>
			<br>

			<%= form_tag url_for(action: 'update'), method: "put" do %>

			<div class="form-group">
			<%= label_tag 'Nom du partenaire' %>
			<%= text_field_tag 'name', @partner.name, :class => "form-control" %>
			</div>

			<div class="form-group">
			<%= label_tag 'Site internet du partenaire' %>
			<div class="input-group mb-2">
					<div class="input-group-prepend">
		          		<div class="input-group-text">http://</div>
		        	</div>
				<%= text_field_tag 'website', @partner.website[7..-1], :class => "form-control" %>
			</div>
			</div>

			<br>
			<%= submit_tag "Editer un partenaire", :class => "btn btn-lg btn-sm btn-block btn-success" %>
			<br><br>
			<% end %>

		</div>
	</div>
</div>