<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8" style="margin-bottom: 5vh">

			<h2>Ajouter un partenaire</h2>
			<br>

			<%= form_tag url_for(action: 'create'), method: "post" do %>

			<div class="form-group">
			<%= label_tag 'Nom du partenaire' %>
			<%= text_field_tag 'name', "", :placeholder => 'Nom du partenaire', :class => "form-control" %>
			</div>

			<div class="form-group">
			<%= label_tag 'Site internet du partenaire' %>
			<div class="input-group mb-2">
					<div class="input-group-prepend">
		          		<div class="input-group-text">http://</div>
		        	</div>
				<%= text_field_tag 'website', "", :placeholder => 'url.domaine', :class => "form-control" %>
			</div>
			</div>

			<br>
			<%= submit_tag "Créer un nouveau partenaire", :class => "btn btn-lg btn-sm btn-block btn-success" %>
			<br><br>
			<% end %>

			<hr/>

			<h2>Partenaires</h2>
			<br>

			<div class="card">
			  <ul class="list-group list-group-flush">
			  	<% @partners.each do |partner| %>
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<span>
							<%= link_to partner.name, partner.website, target: "_blank" %>
						</span>
						<span>
							<%= link_to "Éditer", edit_admin_partner_path(partner.id), :class => "btn btn-warning btn-sm" %>

							<%= link_to "X", admin_partner_path(partner.id), :class => "btn btn-danger btn-sm", data: { confirm: "Êtes-vous sûr(e) de vouloir supprimer ce partenaire ?" }, :method => "delete" %>
						</span>
					</li>
				<% end %>
			  </ul>
			</div>

		</div>
	</div>
</div>