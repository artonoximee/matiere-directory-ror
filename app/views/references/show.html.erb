<div class="container-sidebar-wrapper">

	<%= render 'layouts/sidebar_user' if !user_signed_in? %>

	<div id="content">
			<div class="row justify-content-center">
				<div class="col-xl-8 col-lg-10 col-md-12" style="margin-top: 8vh; margin-bottom: 8vh">

					<%= link_to references_path do %>
					<p class="small"><i class="fas fa-arrow-left"></i> Retour à la liste des références</p>
					<% end %>
					<br>

			<div class="card">
			  <div class="card-body">
			    <h5 class="card-title"><b><%= @reference.title %></b></h5>
			   	<span class="badge badge-secondary"><%= @reference.reference_class.name %></span>
			  </div>
			  <ul class="list-group list-group-flush">
			  	<li class="list-group-item"><b>Auteur.e.s</b> : <%= @reference.authors_array.join(', ') %></li>
			  	<li class="list-group-item"><b>Année</b> : <%= @reference.year %></li>
			  	<li class="list-group-item"><b>Éditeur</b> : <%= @reference.editor.capitalize %> </li>
			  	<li class="list-group-item"><b>Ville</b> : <%= @reference.city.capitalize %> </li>
			  	<li class="list-group-item"><b>PAYS</b> : <%= @reference.country.upcase %> </li>
			  	<li class="list-group-item"><b>Lien</b> : <a href="<%= @reference.link %>" target="_blank"> <%= @reference.link %> </a></li>
			  	<li class="list-group-item"><b>Résumé</b> : <%= break_the_lines(@reference.summary) %></li>
			  </ul>
			</div>

			<%= link_to "mailto:contact@mlav.land" do %>
					<p class="float-right small" style="margin-top: 30px"><i class="fas fa-envelope"></i> Pour toute réclamation ou information, veuillez nous contacter en cliquant ici</p>
					<% end %>
					<br>

		</div>
	</div>
</div>
</div>