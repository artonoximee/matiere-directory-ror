<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8" style="margin-bottom: 5vh">

			<div class="card">
			  <ul class="list-group list-group-flush">
			  	<% @references.each do |reference| %>
					<li class="list-group-item align-items-center"><%= link_to reference.title, reference_path(reference.id) %>
						<br/><span class="small"><%= reference.last_name.upcase %> <%= reference.first_name.capitalize %></span>
						<span class="float-right small"><%= reference.year %></span>
					</li>
				<% end %>
			  </ul>
			</div>
			
		</div>
	</div>
</div>